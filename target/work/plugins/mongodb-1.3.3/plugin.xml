<plugin name='mongodb' version='1.3.3' grailsVersion='2.1.4 &gt; *'>
  <author>Graeme Rocher</author>
  <authorEmail>graeme.rocher@springsource.com</authorEmail>
  <title>MongoDB GORM</title>
  <description>A plugin that integrates the Mongo document datastore into Grails, providing a GORM API onto it</description>
  <documentation>http://grails.org/plugin/mongodb</documentation>
  <type>MongodbGrailsPlugin</type>
  <resources />
  <repositories>
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='grailsCentral' url='http://grails.org/plugins' />
  </repositories>
  <dependencies>
    <test>
      <dependency group='org.grails' name='grails-datastore-simple' version='1.1.9.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-gorm-test' version='1.1.9.RELEASE' />
    </test>
    <compile>
      <dependency group='org.mongodb' name='mongo-java-driver' version='2.11.3' />
      <dependency group='org.springframework.data' name='spring-data-commons-core' version='1.4.1.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-core' version='1.1.9.RELEASE' />
      <dependency group='org.springframework.data' name='spring-data-mongodb' version='1.2.1.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-mongo' version='1.3.1.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-gorm' version='1.1.9.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-gorm-mongo' version='1.3.1.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-gorm-plugin-support' version='1.1.9.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-web' version='1.1.9.RELEASE' />
    </compile>
    <runtime>
      <dependency group='org.springframework.data' name='spring-data-commons' version='1.5.1.RELEASE' />
      <dependency group='org.javassist' name='javassist' version='3.16.1-GA' />
      <dependency group='com.gmongo' name='gmongo' version='1.2' />
    </runtime>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>